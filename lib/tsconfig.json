{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "module": "commonJS",
        "outDir": "build",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "compileOnSave": true
}